% Comment box definition
\newtcolorbox{commentbox}[3][]{
	frame hidden,
	boxrule=0pt,
	breakable,
	enhanced,
	before skip=8pt plus 1pt,
	toptitle=3mm,
	boxsep=0.25ex,
	left=8pt,
	right=8pt,
	arc=0mm,
	fonttitle=\fontfamily{LibertinusSans-LF}\selectfont\scshape\bfseries\color{black},
	fontupper=\fontfamily{lmss}\selectfont,
	title=#2,
	parbox = false,
	colback=#3,
	colframe=#3,
	colbacktitle=#3,
	after={\vspace{5pt plus 1pt}\noindent},
	#1
}

