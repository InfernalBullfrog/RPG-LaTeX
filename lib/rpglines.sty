% Fancy hline styles

\newlength{\linelength}
\setlength{\linelength}{\textwidth}

\newcommand{\spotline}[2][\textwidth]
    {\noindent
     \setlength{\linelength}{#1}
     \begin{tikzpicture}[]
         \draw [#2, fill=#2] (0, 0.005) -- (0.47\linelength, 0.03) -- (0.5\linelength, 0.0) -- (0.47\linelength, -0.03) -- (0,-0.005) -- cycle;
         \draw [#2, fill=#2] (0.5\linelength, 0) circle(0.05);
         \draw [#2, fill=#2] (0.5\linelength, 0) -- (0.53\linelength, 0.03) -- (\linelength, 0.005) -- (\linelength, -0.005) -- (0.53\linelength, -0.03) -- cycle;
     \end{tikzpicture}
    }

\newcommand{\doublevline}[3]
    {\noindent
     \setlength{\linelength}{#1}
     \begin{tikzpicture}[]
         \draw [#2, ultra thick] (0, 0) .. controls (0.45\linelength, 0) .. (0.5\linelength, -0.08);
         \draw [#2, ultra thick] (\linelength, 0) .. controls (0.55\linelength, 0) .. (0.5\linelength, -0.08);
         \draw [#2, fill=#2] (0,0) circle (0.05);
         \draw [#2, fill=#2] (\linelength, 0) circle (0.05);
         \draw [#3, thick] (0.03\linelength, -0.06) .. controls (0.45\linelength, -0.06) .. (0.5\linelength, -0.14);
         \draw [#3, thick] (0.98\linelength, -0.06) .. controls (0.55\linelength, -0.06) .. (0.5\linelength, -0.14);
     \end{tikzpicture}
    }

