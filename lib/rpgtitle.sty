% Title box definition
\newtcolorbox{titlebox}[3][]{
    float*=t,
	frame hidden,
    spread upwards,
    width=\paperwidth,
    height=\paperheight,
	toptitle=1.5cm,
	%arc=0mm,
    leftupper=4.5cm,
    rightupper=4.5cm,
    fonttitle=\fontfamily{yrd}\selectfont\Huge\bfseries\color{white},
	fontupper=\fontfamily{lmss}\selectfont,
    halign title=center,
	title=#2,
	parbox = false,
	colback=#3,
	colframe=#3,
	colbacktitle=#3,
    after={0pt\noindent\newpage},
	#1
}

