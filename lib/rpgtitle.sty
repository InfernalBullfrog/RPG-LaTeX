% Title box definition
\newtcolorbox{titlebox}[3][]{
    float*=t,
	frame hidden,
    spread upwards,
    width=\paperwidth,
    height=\paperheight,
	toptitle=1.5cm,
    leftupper=4.5cm,
    rightupper=4.5cm,
    leftlower=1cm,
    rightlower=1cm,
    halign lower=center,
    sharp corners,
    fonttitle=\fontfamily{yrd}\fontsize{32}{38}\selectfont\bfseries\color{white},
	fontupper=\fontfamily{ppl}\selectfont,
    fontlower=\fontfamily{ppl}\selectfont\Huge,
    halign title=center,
	title=#2,
	parbox = false,
	colback=#3,
	colframe=#3,
	colbacktitle=#3,
    after={0pt\noindent\newpage},
	#1
}

