    }

\newcommand{\wedgeline}[1]
    {\noindent
     \begin{tikzpicture}[]
         \draw [#1, fill=#1] (0, 0) -- (0, 0.1) -- (\textwidth, 0.08) -- cycle;
     \end{tikzpicture}
    }

% Custom titlepage
\newcommand{\rpgtitlepage}[5]{
    \newgeometry{margin=1cm}
    \newpagecolor{#2}
    \begin{centering}
        {\fontfamily{yrd}\fontsize{32}{38}\selectfont\bfseries #1}

        \diamondline{red}
        
        \includegraphics[width=\textwidth]{#3}
        
        \vspace{1cm}
        {\fontfamily{ppl}\selectfont\Huge #4}

        \vspace{3cm}
        {\fontfamily{ppl}\selectfont\Huge #5}
            
        
    \end{centering}
    \afterpage{\restorepagecolor}
}


